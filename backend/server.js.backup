// Downgrade subscription endpoint (schedule for next billing cycle)
app.post('/schedule-subscription-change', async (req, res) => {
  try {
    const { subscriptionId, newTier } = req.body;

    const subscription = await stripe.subscriptions.retrieve(subscriptionId);

    // Schedule the change for the next billing cycle
    const schedulePhase = {
      items: [
        {
          price_data: {
            currency: 'usd',
            product_data: {
              name: `LAMB ${newTier} Plan`,
            },
            unit_amount: PRICE_MAP[newTier],
            recurring: {
              interval: 'month',
            },
          },
        },
      ],
      metadata: {
        tier: newTier
      },
      start_date: subscription.current_period_end,
    };

    // Create or update subscription schedule
    try {
      const schedules = await stripe.subscriptionSchedules.list({
        subscription: subscriptionId,
        limit: 1
      });

      if (schedules.data.length > 0) {
        await stripe.subscriptionSchedules.update(schedules.data[0].id, {
          phases: [
            {
              items: subscription.items.data.map(item => ({
                price: item.price.id,
                quantity: item.quantity
              })),
              start_date: subscription.current_period_start,
              end_date: subscription.current_period_end,
            },
            schedulePhase
          ]
        });
      } else {
        await stripe.subscriptionSchedules.create({
          from_subscription: subscriptionId,
        });
        
        const newSchedules = await stripe.subscriptionSchedules.list({
          subscription: subscriptionId,
          limit: 1
        });
        
        if (newSchedules.data.length > 0) {
          await stripe.subscriptionSchedules.update(newSchedules.data[0].id, {
            phases: [
              {
                items: subscription.items.data.map(item => ({
                  price: item.price.id,
                  quantity: item.quantity
                })),
                start_date: subscription.current_period_start,
                end_date: subscription.current_period_end,
              },
              schedulePhase
            ]
          });
        }
      }

      res.json({
        success: true,
        effectiveDate: subscription.current_period_end
      });
    } catch (scheduleError) {
      console.error('Error with subscription schedule:', scheduleError);
      // Fallback: just update metadata to track the pending change
      await stripe.subscriptions.update(subscriptionId, {
        metadata: {
          pending_tier: newTier,
          change_at: subscription.current_period_end.toString()
        }
      });
      
      res.json({
        success: true,
        effectiveDate: subscription.current_period_end,
        note: 'Change scheduled in metadata'
      });
    }
  } catch (error) {
    console.error('Error scheduling subscription change:', error);
    res.status(500).json({ error: error.message });
  }
});

// Cancel subscription endpoint
app.post('/cancel-subscription', async (req, res) => {
  try {
    const { subscriptionId, immediate } = req.body;

    if (immediate) {
      await stripe.subscriptions.cancel(subscriptionId);
    } else {
      await stripe.subscriptions.update(subscriptionId, {
        cancel_at_period_end: true
      });
    }

    res.json({ success: true });
  } catch (error) {
    console.error('Error canceling subscription:', error);
    res.status(500).json({ error: error.message });
  }
});

